<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03224c"
    tools:context=".StartWork">

    <LinearLayout
        android:id="@+id/fitnone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="81dp"
            tools:layout_editor_absoluteY="4dp">

        </LinearLayout>
    </LinearLayout>
   <TextView
       android:id="@+id/intropagee"
       android:layout_width="wrap_content"
       android:layout_height="11dp"
       android:background="#25293E"

       tools:layout_editor_absoluteX="35dp"
       tools:layout_editor_absoluteY="155dp"
       tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/intropage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="12dp"

        android:lineSpacingExtra="8dp"
        android:text="Introduction"


        android:textColor="#FFFFFF"
        android:textSize="24sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divpage" />

    <TextView
        android:id="@+id/subintropage"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"

        android:lineSpacingExtra="8dp"
        android:text="The text dummy could help anyone to design faster and better"


        android:textColor="#4C5067"
        android:textSize="18sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/intropage" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:src="@drawable/fitpicon"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="98dp" />

    <TextView
        android:id="@+id/fitonetitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jump Rice"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="109dp" />

    <TextView
        android:id="@+id/fitonedesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 4 to 5 Minutes"
        android:textColor="#4C5067"
        android:textSize="20sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="112dp"
        tools:layout_editor_absoluteY="137dp" />

</androidx.constraintlayout.widget.ConstraintLayout>